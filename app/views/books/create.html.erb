<% provide(:title, 'Insert') %>
<h1>Book Insert</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :author %>
      <%= f.email_field :author, class: 'form-control' %>

      <%= f.label :genre %>
      <%= f.password_field :genre, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <ul class="books">  
  <li><%= link_to "All books", book_path %>
  </ul> 
  </div>
</div>